!!! 5
%html{lang: :en}
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}

    %title
      Profile: #{@current_user.base_name}

    %meta{:name => 'description', :content => ''}
    %meta{:name => 'author',      :content => ''}
    %meta{:name => 'viewport',    :content => 'width=device-width,initial-scale=1'}

    %link{:rel => 'shortcut icon', :href => '/img/favicon.ico'}
    %link{:rel => 'stylesheet',    :href => '/css/bootstrap.min.css'}
    %link{:rel => 'stylesheet',    :href => '/css/select2.css'}
    %link{:rel => 'stylesheet',    :href => '/css/profile.css'}

    %body
      .site-wrapper
        .site-wrapper-inner
          .navbar.navbar-inverse.navbar-fixed-top{role: :navigation}
            .container-fluid
              .navbar-header
                %button.navbar-toggle{type: :button, "data-toggle" => :collapse, "data-target" => ".navbar-collapse"}
                  %span.sr-only Toggle Navigation
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar

                %a.active.navbar-brand{href: "#"}
                  %span.glyphicon.glyphicon-user
                  == #{@current_user.base_name}

              .navbar-collapse.collapse
                %ul.nav.navbar-nav.navbar-right
                  %li
                    %a{href: "#"} Help
                  %li
                    %a{href: "/logout"} Logout

          .container-fluid
            %h1
              Profile

            %p
              Edit and modify settings

            %form{role: :form}
              .container-fluid
                .row
                  .input-group
                    %input.form-control{type: :text, value: @current_user.base_name}

                  %br

                  .input-group
                    %select.select2-drop-mask{id: "theme", style: "min-width: 100%"}
                      - @themes.each do |theme|
                        %option{value: theme}= theme

      %script{type: "text/javascript", src: "/js/jquery.min.js"}
      %script{type: "text/javascript", src: "/js/bootstrap.min.js"}
      %script{type: "text/javascript", src: "/js/select2.min.js"}
      %script{type: "text/javascript", src: "/js/application.js"}
